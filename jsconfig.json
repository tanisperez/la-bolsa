{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "root/*": ["./*"],
            "public/*": ["public*"],
            "@components/*": ["./src/components/*"]
        }
    },
    "exclude": ["node_modules", "dist", ".next", ".cache", "bundles", "out"],
    "include": ["build/**/*", "server/**/*", "e2e/**/*", "src/**/*"]
}