{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "root/*": ["./*"],
            "~/*": ["./src/*"],
            "public/*": ["public*"],
            "@components/*": ["src/components/*"],
            "@services/*": ["src/services/*"],
            "@clients/*": ["src/clients/*"],
            "@pages/*": ["src/pages/*"]
        }
    },
    "exclude": ["node_modules", "dist", ".next", ".cache", "bundles", "out"],
    "include": ["build/**/*", "server/**/*", "e2e/**/*", "src/**/*"]
}